{
  "name": "sistema-gestao-escolar-backend",
  "version": "1.0.0",
  "description": "Backend do Sistema de Gest√£o Escolar",
  "main": "dist/server.js",
  "scripts": {
    "dev": "set NODE_OPTIONS=--max-old-space-size=4096 --expose-gc && npx tsx watch --env-file=.env src/server.ts",
    "build": "tsc",
    "start": "set NODE_OPTIONS=--max-old-space-size=4096 && node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "set NODE_OPTIONS=--max-old-space-size=8192 && jest --runInBand",
    "test:watch": "set NODE_OPTIONS=--max-old-space-size=8192 && jest --watch --maxWorkers=1",
    "test:coverage": "set NODE_OPTIONS=--max-old-space-size=8192 && jest --coverage --runInBand",
    "test:unit": "set NODE_OPTIONS=--max-old-space-size=8192 && jest __tests__/unit --runInBand",
    "test:integration": "set NODE_OPTIONS=--max-old-space-size=8192 && jest __tests__/integration --runInBand --forceExit",
    "test:fase1": "set NODE_OPTIONS=--max-old-space-size=2048 && npx tsx scripts/tests/test-fase1.ts",
    "test:redis": "set NODE_OPTIONS=--max-old-space-size=2048 && npx tsx scripts/tests/test-redis.ts",
    "test:all-connections": "set NODE_OPTIONS=--max-old-space-size=2048 && npx tsx scripts/tests/test-all-connections.ts",
    "test:auth": "set NODE_OPTIONS=--max-old-space-size=2048 && npx tsx scripts/tests/test-auth-complete.ts",
    "test:login": "set NODE_OPTIONS=--max-old-space-size=2048 && npx tsx scripts/tests/test-login-completo.ts",
    "seed:base": "set NODE_OPTIONS=--max-old-space-size=8192 --expose-gc && npx tsx scripts/seeds/seed-test-data.ts",
    "seed:alunos": "set NODE_OPTIONS=--max-old-space-size=8192 --expose-gc && npx tsx scripts/seeds/seed-alunos.ts",
    "seed:notas": "set NODE_OPTIONS=--max-old-space-size=8192 --expose-gc && npx tsx scripts/seeds/seed-notas-frequencias.ts",
    "seed:all": "npm run seed:base && timeout /t 5 /nobreak && npm run seed:alunos && timeout /t 5 /nobreak && npm run seed:notas",
    "setup:admin": "set NODE_OPTIONS=--max-old-space-size=2048 && npx tsx scripts/setup/setup-admin.ts",
    "backup:db": "set NODE_OPTIONS=--max-old-space-size=4096 && npx tsx backup-database.ts",
    "restore:clean": "set NODE_OPTIONS=--max-old-space-size=4096 && npx tsx restore-clean.ts",
    "restore:backup": "set NODE_OPTIONS=--max-old-space-size=4096 && npx tsx restore-backup.ts",
    "clean:db": "set NODE_OPTIONS=--max-old-space-size=8192 && npx tsx limpar-banco-completo.ts",
    "reset:all": "npm run clean:db && timeout /t 5 /nobreak && npm run seed:all",
    "analyze:system": "set NODE_OPTIONS=--max-old-space-size=4096 && npx tsx scripts/tools"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "gestao",
    "escolar",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bull": "^3.15.9",
    "@types/compression": "^1.8.1",
    "@types/ioredis": "^4.28.10",
    "@types/multer": "^2.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/socket.io": "^3.0.1",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "bull": "^4.16.5",
    "bull-board": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "graphql": "^16.12.0",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "openai": "^6.16.0",
    "pg": "^8.17.1",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.3.1",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.11.2",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.30",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "prisma": "^5.7.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
