{
  // Otimizações para prevenir crashes do VS Code
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/uploads/**": true,
    "**/backups/**": true,
    "**/prisma/migrations/**": true,
    "**/dev-dist/**": true,
    "**/*.log": true,
    "**/.pnpm-store/**": true,
    "**/temp/**": true,
    "**/.cache/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/uploads": true,
    "**/backups": true,
    "**/.git": true,
    "**/dev-dist": true,
    "**/temp": true,
    "**/.cache": true,
    "**/prisma/migrations": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/dev-dist": true,
    "**/.cache": true,
    "**/temp": true
  },
  
  // AUMENTO DE MEMÓRIA PARA TYPESCRIPT SERVER (12GB MÁXIMO)
  "typescript.tsserver.maxTsServerMemory": 12288,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.log": "off",
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/dist", "**/build"]
  },
  
  // Melhorar performance do editor (MÁXIMO DESEMPENHO)
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.parameterHints.enabled": true,
  "editor.suggest.localityBonus": true,
  "editor.inlayHints.enabled": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.semanticHighlighting.enabled": false,
  "editor.suggest.preview": false,
  "editor.suggest.shareSuggestSelections": false,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.smoothScrolling": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  
  // Git otimizações
  "git.autofetch": false,
  "git.autorefresh": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "none",
  
  // Extensões
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  
  // Terminal
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  
  // TypeScript/JavaScript (REATIVADO COM LIMITES)
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "javascript.suggest.enabled": true,
  "typescript.suggest.enabled": true,
  
  // Otimizações de memória do VS Code (AGRESSIVO)
  "files.autoSave": "onFocusChange",
  "files.hotExit": "onExitAndWindowClose",
  "window.restoreWindows": "none",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.list.smoothScrolling": false,
  "workbench.tree.indent": 10,
  
  // Desabilitar features pesadas
  "diffEditor.renderSideBySide": false,
  "problems.decorations.enabled": true,
  "outline.problems.enabled": true,
  "breadcrumbs.enabled": true,
  "telemetry.telemetryLevel": "off",
  
  // Limitar histórico
  "scm.diffDecorations": "gutter",
  "scm.diffDecorationsGutterWidth": 2,
  
  // Redis e ambiente
  "[dotenv]": {
    "editor.defaultFormatter": "vscode.plain-text"
  }
}
